<odoo>
    <data>
        <record id="voting_website_view_form" model="website.menu">
            <field name="name">Votaciones</field>
            <field name="url">/votaciones</field>
            <field name="parent_id" ref="website.main_menu"/>
        </record>
        <template id="voting_website_template" name="Votacion Web">
            <t t-call="website.layout">
                <div class="container">
                    <form action="/website/voting" method="post">
                        <div class="form-group">
                            <label for="vat" class="control-label">Digite el Nro de Documento</label>
                            <input type="text" name="vat" placeholder="e.g. 1116284963" required="True"/>
                        </div>

                        <div class="form-group">
                            <label for="name" class="control-label">Digite el Nombre</label>
                            <input type="text" name="name" placeholder="e.g. Hassan Kabande" required="True"/>
                        </div>

                        <div class="clearfix oe_login_buttons">
                            <button type="submit" class="btn btn-primary pull-left">Votar</button>
                        </div>
                    </form>
                </div>
            </t>
        </template>
    </data>
</odoo>